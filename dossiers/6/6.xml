			  <seg rend="75,496,251,509">Seneca i<expan>n</expan> Moralibus : Pacem</seg>
			  <seg rend="74,514,254,524">h<expan>ab</expan>eto cu<expan>m</expan> hominib<expan>us</expan>, cu<expan>m</expan> viciis</seg>
			  <seg rend="73,530,132,545">bellum</seg>
			  <seg rend="285,383,318,395">orit<expan>ur</expan></seg>
			  <seg rend="333,384,373,395">in h<expan>oc</expan> loco</seg>
			  <seg rend="388,382,426,395">subita</seg>
			  <seg rend="583,384,683,397">i<expan>n</expan>vidia, malicia</seg>
			  <seg rend="288,402,617,414">[N]ascitur hic inopina mali lacrimabilis astu</seg>
			  <seg rend="293,418,505,429">sedicio de virtutib<expan>us</expan> <expan>contr</expan>a vicia orit<expan>ur</expan></seg>
			  <seg rend="260,507,582,517">Int<expan>er</expan> conf<expan>er</expan>tos cuneos <expan>Con</expan>cordia forte,</seg>
			  <seg rend="255,435,604,447">tempestas, placide turbatrix invida Pacis</seg>
			  <seg rend="325,453,383,462">repe<expan>n</expan>tina</seg>
			  <seg rend="469,451,500,462">cede</seg>
			  <seg rend="620,426,740,441">placide i<expan>des</expan>t tranquille [ms. transquille]</seg>
			  <seg rend="602,495,766,526">[Main du XVIe siècle :]Discordiae et Concordiae pugna</seg>
			  <seg rend="400,489,442,501">globos</seg>
			  <seg rend="262,471,596,484">Q<expan>ue</expan> t<expan>antu</expan>m s<expan>u</expan>bita vexaret clade triu<expan>m</expan>phum.</seg>
			  <seg rend="258,541,606,554">Du<expan>m</expan> stipata pede<expan>m</expan> ja<expan>m</expan> tutis menib<expan>us</expan> infert,</seg>
			  <seg rend="258,576,608,588">Excipit occultu<expan>m</expan> vicii latitantis ab ictu</seg>
			  <seg rend="258,612,600,624">Muc<expan>r</expan>onem levo i<expan>n</expan> lat<expan>er</expan>e. Scalentia q<expan>u</expan>anvis</seg>
			  <seg rend="252,647,596,660">Texta cathenato f<expan>er</expan>ro subtegmi<expan>n</expan>e corp<expan>us</expan></seg>
			  <seg rend="257,683,608,695">Ambire<expan>n</expan>t, sutis <expan>et</expan> acumen vuln<expan>er</expan>is hamis</seg>
			  <seg rend="302,520,374,534">ci<expan>r</expan>cu<expan>m</expan> se ip<expan>s</expan>am</seg>
			  <seg rend="484,522,539,536">defensis</seg>
			  <seg rend="556,523,609,535">i<expan>m</expan>mittit</seg>
			  <seg rend="414,562,470,570">discordie</seg>
			  <seg rend="564,559,642,570">a p<expan>er</expan>cussione</seg>
			  <seg rend="347,592,385,605">sinist<expan>r</expan>o</seg>
			  <seg rend="461,591,547,605">fugentia asp<expan>er</expan>a</seg>
			  <seg rend="350,667,390,677">ligatis</seg>
			  <seg rend="275,666,336,678">ci<expan>rcum</expan>darent</seg>
			  <seg rend="435,666,469,677">gladii</seg>
			  <seg rend="495,664,530,678">i<expan>dest</expan> f<expan>er</expan>ri</seg>
			  <seg rend="566,663,595,676">ci<expan>r</expan>cul<expan>is</expan></seg>
			  <seg rend="373,701,411,712">duris</seg>
			  <seg rend="500,700,574,713">firmissima</seg>			   
			  <seg rend="290,737,332,749">i<expan>m</expan>missu<expan>m</expan></seg>
			  <seg rend="341,768,469,780">lancea<expan>m</expan>, f<expan>er</expan>ru<expan>m</expan> de Calibe</seg>
			  <seg rend="496,767,547,778">t<expan>r</expan>ansire</seg>
			  <seg rend="270,806,350,820"><expan>con</expan>ju<expan>n</expan>ct<expan>ur</expan>a n<expan>u</expan>lla</seg>
			  <seg rend="405,801,431,814">u<expan>b</expan>i</seg>
			  <seg rend="575,812,620,823">ornate</seg>
			  <seg rend="273,846,330,855">textura</seg>
			  <seg rend="475,842,495,854">u<expan>b</expan>i</seg>
			  <seg rend="511,843,551,854"><expan>con</expan>ju<expan>n</expan>git</seg>
			  <seg rend="589,845,620,857">fines</seg>
			  <seg rend="261,714,612,729">Respuerent, rigidis nec fila tenacia nodis</seg>
			  <seg rend="267,752,610,765">Impactu<expan>m</expan> sin<expan>er</expan>ent penet<expan>ra</expan>re i<expan>n</expan> viscera telu<expan>m</expan>,</seg>
			  <seg rend="257,790,605,803">Rara t<expan>am</expan>en chalibe<expan>m</expan> tenui t<expan>r</expan>ansmitt<expan>er</expan>e pu<expan>n</expan>cto</seg>
			  <seg rend="259,823,600,839"><expan>Com</expan>missura dedit, q<expan>u</expan>a sese extrema polite</seg>
			  <seg rend="254,862,606,876">Scama ligat tunice sin<expan>us</expan> et s<expan>ib</expan>i <expan>con</expan>s<expan>er</expan>it horas.</seg>
			  </p>
			</div>
			<div type="transcription">
				<div type="texte">
					<l>[N]ascitur hic inopina mali lacrimabilis astu</l>
					<l>tempestas, placide turbatrix invida Pacis,</l>
					<l>Q<expan>ue</expan> t<expan>antu</expan>m s<expan>u</expan>bita vexaret clade triu<expan>m</expan>phum.</l>
					<l>Int<expan>er</expan> conf<expan>er</expan>tos cuneos <expan>Con</expan>cordia forte,</l>
					<l>Du<expan>m</expan> stipata pede<expan>m</expan> ja<expan>m</expan> tutis menib<expan>us</expan> infert,</l>
					<l>Excipit occultu<expan>m</expan> vicii latitantis ab ictu</l>
					<l>Muc<expan>r</expan>onem levo i<expan>n</expan> lat<expan>er</expan>e. Scalentia q<expan>u</expan>anvis</l>
					<l>Texta cathenato f<expan>er</expan>ro subtegmi<expan>n</expan>e corp<expan>us</expan></l>
					<l>Ambire<expan>n</expan>t, sutis <expan>et</expan> acumen vuln<expan>er</expan>is hamis</l>
					<l>Respuerent, rigidis nec fila tenacia nodis</l>
					<l>Impactu<expan>m</expan> sin<expan>er</expan>ent penet<expan>ra</expan>re i<expan>n</expan> viscera telu<expan>m</expan>,</l>
					<l>Rara t<expan>am</expan>en chalibe<expan>m</expan> tenui t<expan>r</expan>ansmitt<expan>er</expan>e pu<expan>n</expan>cto</l>
					<l><expan>Com</expan>missura dedit, q<expan>u</expan>a sese extrema polite</l>
					<l>Scama ligat tunice sin<expan>us</expan> et s<expan>ib</expan>i <expan>con</expan>s<expan>er</expan>it horas.</l>
					<l></l>
					<l></l>
					<l></l>
